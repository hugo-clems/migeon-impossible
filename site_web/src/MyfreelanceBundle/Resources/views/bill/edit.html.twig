{% extends 'MyfreelanceBundle::template.html.twig' %}

{% block title %}
    State edit
{% endblock %}
{% block body %}
    <div class="box">
        <div class="box-body">

            {{ form_start(edit_form) }}
                
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>titre<th>
                        <th>Nombre heures</th>
                    </tr>
                </thead>
                <tbody>
                {% for ticket in edit_form.ticketList %}
                    <tr>
                        <td>#{{ticket.vars.value.id}}</td>
                        <td>{{ticket.vars.value.title}}</td>
                        <td>{{ticket.vars.value.nbHour|time}}</td>
                        <td>{{form_widget(ticket)}}</td>
                {% endfor %}
                <tbody>
            </table>
                <input class="btn btn-default" type="submit" value="Valider" />
            {{ form_end(edit_form) }}

            
            <a class="btn btn-default" href="{{ path('myfreelance_type_index') }}">Back to the list</a>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
