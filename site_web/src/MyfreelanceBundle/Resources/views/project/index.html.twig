{% extends "MyfreelanceBundle::template.html.twig" %}

{% block title %} Accueil - {{ parent() }}{% endblock %}

{% block body %}
    <div class="box">
        <h1>Projet : {{project.name}}</h1>
    </div>
    <div class="box">
        <div class="box-body">
            nb ticket : {{project.ticketList.count}}
        
            <a href="{{path("myfreelance_ticket_add",{"idProject":project.id})}}" class="btn btn-default">Ajouter ticket</a>
        </div>
    </div>
    <div class="box">
        <div class="box-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>name</th>
                    <th>date</th>
                    <th>avancement</th>
                </tr>
            </thead>

            <tbody>
            {% for ticket in project.ticketList %}
                <tr>
                    <td>{{ticket.id}}</td>
                    <td>{{ticket.title}}</td>
                    <td>{{ticket.startDate|date('d/m/y')}}</td>
                    <td>
                        <div class="progress is-xs m-a-0 m-t-10">
                            <div class="progress-bar" role="progressbar" aria-valuenow="94" aria-valuemin="0" aria-valuemax="100" style="width: {{ticket.percentage}}%;">
                              <span class="sr-only">{{ticket.percentage}}% Complete</span>
                            </div>
                          </div>
                    </td>
                    <td><a href="{{path('myfreelance_ticket_view',{'idTicket':ticket.id})}}">voir</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
            </div>
        
{% endblock %}