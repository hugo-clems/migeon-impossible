{% extends 'MyfreelanceBundle::template.html.twig' %}

{% block body %}
    <div class="box">
        <div class="box-body">
                <a href="{{ path('myfreelance_state_new') }}" class="btn btn-default">Creer un nouvel etat</a>

                <h1>States list</h1>

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for state in states %}
                        <tr>
                            <td><a href="{{ path('myfreelance_state_show', { 'id': state.id }) }}">{{ state.id }}</a></td>
                            <td>{{ state.name }}</td>
                            <td>
                                <a class="btn btn-default" href="{{ path('myfreelance_state_edit', { 'id': state.id }) }}">edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
        </div>
    </div>
{% endblock %}
