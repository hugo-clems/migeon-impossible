{% extends "MyfreelanceBundle::template.html.twig" %}

{% block title %} Accueil - {{ parent() }}{% endblock %}

{% block body %}
	<div class="box">
	<div class="box-body">
            <h1>Accueil</h1>

            <p>Contenu de la page d'accueil</p>
            <a href="{{path('myfreelance_customer_add_ticket')}}" class="btn btn-primary">Generer un ticket</a>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td>nb ticket non fini</td>
                        <td>nb ticket total</td>
                        <td>voir</td>
                    </tr>
                </thead>
                <tbody>
                    {% for project in projectList %}
                        <tr>
                            <td>{{project.name}}</td>
                            <td>{{project.countOpenTicket}}</td>
                            <td>{{project.countAllTicket}}</td>
                            <td><a href="{{path('myfreelance_customer_project_index',{'project':project.id})}}">Voir</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        </div>
{% endblock %}